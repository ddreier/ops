{
  "variables": {
    "aws_access_key": "SUPER SECRET",
    "aws_secret_key": "SUPER SECRET"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami_filter": {
      "most_recent": true,
      "filters": {
        "name": "base packer-*"
      },
      "owners": [ "self" ]
    },
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "nomad-client packer-{{timestamp}}"
  }],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 15"
      ]
    },
    {
      "type": "file",
      "source": "files/nomad-client/nomad.hcl",
      "destination": "/tmp/nomad.hcl"
    },
    {
      "type": "file",
      "source": "files/nomad-client/nomad.service",
      "destination": "/tmp/nomad.service"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/install-nomad-client.sh"
      ]
    }
  ],

  "post-processors": [
    {
      "type": "manifest",
      "output": "nomad-client.manifest"
    }
  ]
}