{
  "variables": {
    "aws_access_key": "SUPER SECRET",
    "aws_secret_key": "SUPER SECRET"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-0ac019f4fcb7cb7e6",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "base packer-{{timestamp}}"
  }],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 15"
      ]
    },
    {
      "type": "file",
      "source": "files/consul-client/consul.json",
      "destination": "/tmp/consul.json"
    },
    {
      "type": "file",
      "source": "files/consul-client/consul.service",
      "destination": "/tmp/consul.service"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/get-hashi-binaries.sh",
        "scripts/install-consul-client.sh"
      ]
    }
  ],

  "post-processors": [
    {
      "type": "manifest",
      "output": "base.manifest"
    }
  ]
}